<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main View -->

    <!-- album image styles -->
    <style name="AlbumImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/album_image_height</item>
        <item name="android:src">@drawable/image_icon</item>
    </style>

    <!-- song name & artist name styles -->
    <style name="MainTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/song_artist_text_size</item>
    </style>

    <!-- play button styles-->
    <style name="PlayButton">
        <item name="android:layout_width">@dimen/play_button_width</item>
        <item name="android:layout_height">@dimen/play_button_height</item>
        <item name="android:src">@android:drawable/ic_media_play</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/play_button_margin</item>
    </style>

    <!-- text view explanation styles -->
    <style name="ExplainTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/explanation_text_size</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!-- Detail View -->

    <!-- detail album image styles -->
    <style name="DetailAlbumImage">
        <item name="android:layout_width">@dimen/detail_album_width</item>
        <item name="android:layout_height">@dimen/detail_album_height</item>
        <item name="android:src">@drawable/image_icon</item>
    </style>

    <!-- song name, artist name, release year, genre styles -->
    <style name="DetailTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:layout_marginTop">@dimen/detail_text_vertical_margin</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- detail artist bio -->
    <style name="DetailArtistBio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/artist_bio_text_size</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Genre View -->
    <style name="GenreImageView">
        <item name="android:layout_width">@dimen/genre_image_width</item>
        <item name="android:layout_height">@dimen/genre_image_height</item>
        <item name="android:src">@drawable/image_icon</item>
        <item name="android:layout_marginBottom">@dimen/genre_image_vertical_margin</item>
    </style>

    <style name="GenreSongTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/genre_song_text_size</item>
    </style>

    <style name="GenreArtistTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/genre_artist_text_size</item>
    </style>
</resources>
